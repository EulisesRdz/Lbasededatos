<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ID"
            android:id="@+id/id"
            android:textColor="#424242"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre"
            android:id="@+id/nombre"
            android:textColor="#424242"
            android:layout_below="@+id/id"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Apellido P"
            android:id="@+id/apep"
            android:textColor="#424242"
            android:layout_marginLeft="38dp"
            android:layout_alignTop="@+id/apem"
            android:layout_toRightOf="@+id/nombre"
            android:layout_toEndOf="@+id/nombre"
            android:layout_marginStart="38dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Apellido M"
            android:id="@+id/apem"
            android:textColor="#424242"
            android:layout_marginLeft="41dp"
            android:layout_above="@+id/tel"
            android:layout_toRightOf="@+id/apep"
            android:layout_toEndOf="@+id/apep"
            android:layout_marginStart="41dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email"
            android:id="@+id/email"
            android:textColor="#424242"
            android:layout_below="@+id/nombre"
            android:layout_marginLeft="5dp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telefono"
        android:id="@+id/tel"
        android:textColor="#424242"
            android:layout_below="@+id/nombre"
            android:layout_alignLeft="@+id/apem"
            android:layout_alignStart="@+id/apem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Edad"
            android:id="@+id/edad"
            android:textColor="#424242"
            android:layout_alignTop="@+id/id"
            android:layout_toRightOf="@+id/id"
            android:layout_toEndOf="@+id/id"
            android:layout_marginLeft="50dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
